@model IEnumerable<Tider.Models.ApplicationUser>

@{
    ViewBag.Title = "All accounts";
}


<div class="main-content">
    <div class="container mt-7">
        <div class="row mt-5">
            <div class="col">
                <div class="card bg-default shadow">
                    <div class="card-header bg-transparent border-0">
                        <h3 class="text-white mb-0">Application Users</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-dark table-flush">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">User</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Role</th>
                                    <th scope="col">Real name</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    @Html.Partial("Partials/_TableRowUser", item)
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<form id="editRoles" style="visibility: hidden" method="post" action="to_be_replaced">@Html.AntiForgeryToken()</form>


@section styles {
    <link rel="stylesheet" href="~/Content/users-table.css" />

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
}


@section scripts {
    <script>

        $('a.edit-roles').click(function () {
            $('#editRoles').get(0).setAttribute('action', ($(this).attr('data-link')))
            $('#editRoles').get(0).submit()

